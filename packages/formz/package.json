{
  "name": "formz",
  "description": "Painless React forms with the magic of hooks",
  "version": "2.8.1",
  "license": "MIT",
  "repository": "https://github.com/ron-dadon/formz",
  "keywords": [
    "formz",
    "react",
    "react-dom",
    "form",
    "forms",
    "field",
    "fields",
    "validation",
    "validations",
    "parser",
    "parsers",
    "formatter",
    "formatters"
  ],
  "type": "module",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "typings": "dist/index.d.ts",
  "devDependencies": {
    "@babel/cli": "7.24.8",
    "@babel/core": "7.24.9",
    "@babel/plugin-transform-modules-commonjs": "7.24.8",
    "@babel/plugin-transform-runtime": "7.24.7",
    "@babel/preset-env": "7.24.8",
    "@babel/preset-react": "7.24.7",
    "@testing-library/react": "16.0.0",
    "@testing-library/dom": "10.3.2",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react-hooks": "8.0.1",
    "babel-preset-minify": "0.5.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.6.0",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.4",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-testing-library": "6.2.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.3.3",
    "prettier-eslint": "16.3.0",
    "regenerator-runtime": "0.14.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "peerDependencies": {
    "react": ">= 17"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "yarn build-js && cp src/index.d.ts dist/index.d.ts",
    "build-js": "yarn build-js-esm && yarn build-js-cjs",
    "build-js-esm": "BABEL_ENV=production-esm babel src -d dist/esm",
    "build-js-cjs": "BABEL_ENV=production-cjs babel src -d dist/cjs",
    "test": "jest .",
    "lint": "eslint src"
  }
}
