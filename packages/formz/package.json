{
  "name": "formz",
  "description": "Painless React forms with the magic of hooks",
  "version": "2.6.1",
  "license": "MIT",
  "repository": "https://github.com/ron-dadon/formz",
  "keywords": [
    "formz",
    "react",
    "react-dom",
    "form",
    "forms",
    "field",
    "fields",
    "validation",
    "validations",
    "parser",
    "parsers",
    "formatter",
    "formatters"
  ],
  "type": "module",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.10",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "babel-preset-minify": "0.5.1",
    "jest": "27.4.7",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/react": "12.1.2",
    "prettier": "2.5.1",
    "regenerator-runtime": "0.13.9"
  },
  "peerDependencies": {
    "react": ">= 17"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir dist && cp src/index.d.ts dist/index.d.ts",
    "test": "jest ."
  }
}
